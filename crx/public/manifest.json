{
  "manifest_version": 2,
  "name": "WeWish",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.firebaseio.com https://apis.google.com; object-src 'self'"
}
